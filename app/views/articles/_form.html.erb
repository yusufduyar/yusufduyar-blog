<%= tinymce_assets %>
<%= simple_form_for @article do |article| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= article.input :title,label: "Başlık", class: "form-control" %>
  </div>

  <div class="form-group">
   <!--<%= article.input :text, class: "form-control tinymce" %>-->
    <%= article.text_area :text, :class => "tinymce", :rows => 10, :cols => 120 %>

  </div>

  <div class="buttons">
    <div class="form-group submit-button">
      <%= article.button :submit, "Kaydet",{:class => "btn btn-primary btn-md"} %>
    </div>
    <% if !@article.id.nil? %>
      <div class="publish-button">
        <%= link_to "Yayınla", publish_article_path(@article),{:class => "btn btn-success btn-md"} %>
      </div>
    <% end %>


  </div>

<% end %>
<%= tinymce %>