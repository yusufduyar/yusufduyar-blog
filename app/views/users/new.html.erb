<%= form_for @user do |f| %>
  <h1>Sign Up</h1>
  <%= f.label :username %><br/>
  <%= f.text_field :username %><br>
  <%= f.label :password %><br/>
  <%= f.password_field :password %><br/>
  <%= f.label "Confirm password" %><br/>
  <%= f.password_field :password_confirmation %><br/>
  <%= f.label :email %><br/>
  <%= f.text_field :email %><br/>
  <%= f.submit "Create User" %>
<% end %>